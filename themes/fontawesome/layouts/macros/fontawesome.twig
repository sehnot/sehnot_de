{% macro icon(name, style = 'regular', size = '', attributes = []) -%}
{% set html_attributes = '' %}
{% for name, value in attributes %}
{% set html_attributes = html_attributes ~ ' ' ~ name ~ '="' ~ value ~ '"' %}
{% endfor %}
<i class="fa-{{ style }} fa-{{ name }}{% if size %}{{ ' fa-' ~ size }}{% endif %}"{{ html_attributes }}></i>
{%- endmacro %}